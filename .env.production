# Production Environment Variables for EGS Tutoring Portal

# Django Settings
DEBUG=False
SECRET_KEY=${SECRET_KEY}

# Domain Configuration
BACKEND_URL=https://egstutoring-portal.ca
FRONTEND_URL=https://egstutoring-portal.ca

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_REDIRECT_URL=https://egstutoring-portal.ca/api/google/oauth2callback

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Email Configuration (Mailgun)
MAILGUN_API_KEY=${MAILGUN_API_KEY}
MAILGUN_DOMAIN=mail.egstutoring-portal.ca
DEFAULT_FROM_EMAIL=no-reply@egstutoring-portal.ca
ADMIN_EMAIL=info@egstutoring.ca

# Celery/Redis Configuration
CELERY_BROKER_URL=${CELERY_BROKER_URL}

# Security
FERNET_SECRET=${FERNET_SECRET}
ALLOWED_HOSTS=egstutoring-portal.ca,www.egstutoring-portal.ca

# OpenAI API
OPENAI_API_KEY=${OPENAI_API_KEY}

# Railway Deployment
RAILWAY_ENVIRONMENT_NAME=production